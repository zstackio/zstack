					</l3BasicNetwork>
				</l3Networks>
			</l2NoVlanNetwork>
		</l2Networks>
		<backupStorageRef>sftp</backupStorageRef>
		<primaryStorages>
			<simulatorPrimaryStorage name="TestPrimaryStorage"
									 description="Test" totalCapacity="1T" url="nfs://test" />
		</primaryStorages>
	</zone>
